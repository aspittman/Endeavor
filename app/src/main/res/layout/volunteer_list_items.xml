<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp"
    android:gravity="center">

    <TextView
        android:id="@+id/volunteer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/volunteer_organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_gravity="bottom"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/volunteer_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center|bottom"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/volunteer_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center|top"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/volunteer_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/volunteer_miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center|start"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/volunteer_purchases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center|end"
        android:textSize="24sp"/>
</androidx.cardview.widget.CardView>